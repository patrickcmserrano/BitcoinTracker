# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database (PostgreSQL)
# Local Development (Docker)
DATABASE_URL="postgresql://trading_user:trading_password_dev@localhost:5432/trading_brain?schema=public"

# Production (Render)
# DATABASE_URL será fornecido automaticamente pelo Render
# Formato: postgresql://user:password@host:5432/database

# Redis Cache
# Local Development (Docker)
REDIS_URL="redis://localhost:6379"

# Production (Render - Redis addon ou externo)
# REDIS_URL será fornecido pelo Render Redis addon
# Formato: redis://red-xxxxx:6379

# APIs Externas
TAAPI_SECRET_KEY=your_taapi_key_here
BINANCE_API_KEY=
BINANCE_SECRET_KEY=

# Cache Configuration
CACHE_DEFAULT_TTL=60000
CACHE_MAX_SIZE=10000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Background Jobs
JOB_CONCURRENCY=5
JOB_DATA_COLLECTOR_INTERVAL=15000        # 15 seconds
JOB_INDICATOR_CALCULATOR_INTERVAL=60000  # 1 minute
JOB_FUTURES_UPDATER_INTERVAL=60000       # 1 minute
JOB_MARKET_INDICATORS_INTERVAL=300000    # 5 minutes
JOB_CLEANUP_INTERVAL=3600000             # 1 hour

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
# Production: https://your-frontend-domain.com

# Logging
LOG_LEVEL=debug
# Production: info ou warn

# CCXT/Freqtrade Integration (Futuro)
CCXT_ENABLED=false
FREQTRADE_API_URL=
FREQTRADE_API_TOKEN=

# Render Specific (auto-populated in production)
# RENDER=true
# IS_PULL_REQUEST=false
