  <div 
    class="maximized-overlay" 
    role="dialog"
    aria-modal="true"
    aria-labelledby="maximized-chart-title"
    onclick={(e) => e.target === e.currentTarget && maximizeChart()}
    onkeydown={(e) => e.key === 'Escape' && maximizeChart()}
    tabindex="-1"
  >
    <div class="maximized-content">
      <!-- Header do grÃ¡fico maximizado -->
      <div class="maximized-header">
        <div class="flex items-center gap-3">
          <h2 
            id="maximized-chart-title"
            class="text-xl font-bold text-primary-600 dark:text-primary-300"
          >
            {symbol} - {interval}
          </h2>
          <span 
            class="text-sm bg-primary-100 dark:bg-primary-800 px-2 py-1 rounded"
            aria-label="Estado do grÃ¡fico"
          >
            Maximizado
          </span>
        </div>
        <button 
          class="close-btn"
          onclick={maximizeChart}
          title="Fechar visualizaÃ§Ã£o maximizada (ESC)"
          aria-label="Fechar grÃ¡fico maximizado"
        >
          âœ•
        </button>
      </div>
      
      <!-- Container do grÃ¡fico maximizado -->
      <div 
        bind:this={maximizedContainer}
        class="maximized-chart"
        role="img"
        aria-label={`GrÃ¡fico de candlestick para ${symbol} no intervalo ${interval}`}
      ></div>
    </div>
  </div>
{/if}

