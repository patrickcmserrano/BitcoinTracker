# Configuração específica para ambiente Distrobox/Container
# Este arquivo define variáveis de ambiente para execução de testes E2E

# Configurações do Playwright para containers
export PLAYWRIGHT_BROWSERS_PATH=/tmp/playwright-browsers
export PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=false

# Configurações do Chrome para containers
export CHROME_FLAGS="--no-sandbox --disable-setuid-sandbox --disable-dev-shm-usage"

# Configurações de display para containers sem GUI
export DISPLAY=:99
export XVFB_RESOLUTION=1920x1080x24

# Timeout aumentado para containers
export PLAYWRIGHT_TIMEOUT=60000

# Configurações de rede
export NODE_TLS_REJECT_UNAUTHORIZED=0
